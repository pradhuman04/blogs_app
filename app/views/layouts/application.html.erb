<!DOCTYPE html>
<html>
  <head>
    <title>BlogsApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="nav-item">
                <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-outline-danger my-3 my-sm-0' %>
              </li>
            <% else %>
              <% if current_page?(login_path) %>
                <li class="nav-item">
                  <%= link_to 'Signup', new_user_path, class: 'btn btn-outline-success my-3 my-sm-0' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Login', login_path, class: 'btn btn-outline-primary my-3 my-sm-0 mr-2' %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
  